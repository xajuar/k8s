apiVersion: v1
kind: Pod
metadata:
  name: volumenes
spec:
  containers:
  - name: nginx:alpine
    image: nginx:alpine
    volumeMounts:
    - mountPath: /home
      name: home
    - mountPath: /git
      name: git
      readOnly: true
    - mountPath: /temp
      name: temp
  volumes:
  - name: home
    hostPath:
      path: /home/xinete/
  - name: git
    gitRepo:
      repository: https://github.com/xajuar/k8s/tree/main
  - name: temp
    emptyDir: {}
